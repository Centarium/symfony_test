<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
            <link rel="stylesheet" href="{{ asset('build/vendor.css') }}" />
        {% endblock %}
    </head>
    <body>
        <div id="root_top"></div>
        <div id="root_main">
            <div id="root_aside" class="col-sm-2">

                {% for item in menu %}
                    <nav class="navbar navbar-light bg-light">
                        <a class="navbar-brand {{ item.isCurrentPage() }} "
                           href="{{ path(item.route) }}">{{ item.name }}</a>
                    </nav>
                {% endfor %}

            </div>
            <div id="root_content" class="col-sm-10">
                {% block body %}{% endblock %}
            </div>
        </div>


        {% block javascripts %}
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/vendor.js') }}"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
